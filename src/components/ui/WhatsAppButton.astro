---
interface Props {
  text?: string;
  message?: string;
  phone?: string;
  className?: string;
}

const {
  text = "Agendar Cita",
  message = "Hola, me gustaría agendar una cita para servicios de neuropsicología.",
  phone = "526623184618",
  className = ""
} = Astro.props;

const whatsappUrl = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
---

<a
  href={whatsappUrl}
  target="_blank"
  rel="noopener noreferrer"
  class={`inline-block px-6 py-3 rounded-lg font-semibold transition-all hover:scale-105 ${className}`}
  style="background-color: #25D366; color: white;"
>
  {text}
</a>