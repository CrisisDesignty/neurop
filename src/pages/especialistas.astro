---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import WhatsAppButton from '../components/ui/WhatsAppButton.astro';

// Import specialist images
import equipoFoto01 from '../assets/equipo-foto-01.webp';
import equipoFoto02 from '../assets/equipo-foto-02.webp';
import equipoFoto03 from '../assets/equipo-foto-03.webp';
import equipoFoto04 from '../assets/equipo-foto-04.webp';
import equipoFoto05 from '../assets/equipo-foto-05.webp';
import equipoFoto06 from '../assets/equipo-foto-06.webp';
import equipoFoto07 from '../assets/equipo-foto-07.webp';
import equipoFoto08 from '../assets/equipo-foto-08.webp';
import equipoFoto09 from '../assets/equipo-foto-09.webp';

const especialistasData = await getCollection('especialistas');

if (!especialistasData || especialistasData.length === 0) {
  throw new Error('No especialistas content found');
}

const pageData = especialistasData[0];

// Map image strings to imported images
const imageMap: { [key: string]: ImageMetadata } = {
  'equipo-foto-01.webp': equipoFoto01,
  'equipo-foto-02.webp': equipoFoto02,
  'equipo-foto-03.webp': equipoFoto03,
  'equipo-foto-04.webp': equipoFoto04,
  'equipo-foto-05.webp': equipoFoto05,
  'equipo-foto-06.webp': equipoFoto06,
  'equipo-foto-07.webp': equipoFoto07,
  'equipo-foto-08.webp': equipoFoto08,
  'equipo-foto-09.webp': equipoFoto09,
};
---

<Layout
  title="Nuestros Especialistas - Neurop"
  description="Conoce a nuestro equipo de especialistas en neuropsicología. Profesionales certificados dedicados a tu bienestar."
>
  <main>
    <section class="py-24 px-6" style="background: white;">
      <div class="container-custom">
        <!-- Heading -->
        <h1 class="text-4xl font-extrabold text-center mb-8 text-neutral-700">
          {pageData.data.title}
        </h1>

        <!-- Intro Paragraph -->
        <p class="text-center text-lg text-neutral-600 max-w-3xl mx-auto mb-12 leading-relaxed">
          {pageData.data.description}
        </p>

        <!-- Dropdown Filter -->
        <div class="max-w-md mx-auto mb-12">
          <div class="relative">
            <button
              id="dropdown-button"
              class="w-full bg-white border-2 border-gray-300 rounded-lg px-6 py-3 text-left font-semibold text-neutral-700 flex justify-between items-center hover:border-gray-400 transition-colors"
            >
              <span id="selected-area">Seleccionar Área</span>
              <svg class="w-5 h-5 transition-transform duration-300" id="dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            
            <div
              id="dropdown-menu"
              class="hidden absolute z-10 w-full mt-2 bg-white border border-gray-300 rounded-lg shadow-lg overflow-hidden"
            >
              <button class="dropdown-item w-full text-left px-6 py-3 hover:bg-gray-100 transition-colors" data-filter="all">
                Todos los especialistas
              </button>
              <button class="dropdown-item w-full text-left px-6 py-3 hover:bg-gray-100 transition-colors" data-filter="evaluacion-neuropsicologica">
                Evaluación neuropsicológica
              </button>
              <button class="dropdown-item w-full text-left px-6 py-3 hover:bg-gray-100 transition-colors" data-filter="evaluacion-lenguaje">
                Evaluación de lenguaje
              </button>
              <button class="dropdown-item w-full text-left px-6 py-3 hover:bg-gray-100 transition-colors" data-filter="terapia-comunicacion">
                Terapia de comunicación, habla y lenguaje
              </button>
              <button class="dropdown-item w-full text-left px-6 py-3 hover:bg-gray-100 transition-colors" data-filter="terapia-aprendizaje">
                Terapia de aprendizaje
              </button>
              <button class="dropdown-item w-full text-left px-6 py-3 hover:bg-gray-100 transition-colors" data-filter="terapia-emocional">
                Terapia emocional
              </button>
            </div>
          </div>
        </div>

        <!-- Specialists Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="specialists-grid">
          {pageData.data.especialistas.map((especialista) => (
            <div class="specialist-card hidden bg-white rounded-lg shadow-lg p-6 flex flex-col h-full" data-areas={especialista.areas.join(' ')}>
              <div class="rounded-lg mb-4 overflow-hidden" style="height: 200px;">
                <Image
                  src={imageMap[especialista.photo] || especialista.photo}
                  alt={`Foto de ${especialista.name}`}
                  class="w-full h-full object-cover"
                  width={300}
                  height={200}
                  format="webp"
                  quality={85}
                />
              </div>
              <h3 class="text-xl font-bold mb-2 text-neutral-700">{especialista.name}</h3>
              <p class="text-sm text-neutral-600 mb-3">{especialista.title}</p>
              <div class="mb-3 flex flex-wrap gap-2">
                {especialista.areas.map((area) => {
                  const getAreaInfo = (areaKey: string) => {
                    const labels: { [key: string]: { label: string; color: string } } = {
                      'evaluacion-neuropsicologica': { label: 'Evaluación neuropsicológica', color: '#0891B2' },
                      'evaluacion-lenguaje': { label: 'Evaluación de lenguaje', color: '#65A30D' },
                      'terapia-comunicacion': { label: 'Terapia de comunicación', color: '#7C3AED' },
                      'terapia-aprendizaje': { label: 'Terapia de aprendizaje', color: '#D97706' },
                      'terapia-emocional': { label: 'Terapia emocional', color: '#DB2777' }
                    };
                    return labels[areaKey] || { label: areaKey, color: '#6B7280' };
                  };
                  const areaInfo = getAreaInfo(area);
                  return (
                    <span class="inline-block px-3 py-1 rounded-full text-sm font-semibold text-white" style={`background-color: ${areaInfo.color};`}>
                      {areaInfo.label}
                    </span>
                  );
                })}
              </div>
              <div class="text-sm text-neutral-600 mb-3">
                <strong>Cédula profesional:</strong>
                {especialista.cedula.map((cedula) => (
                  <div>{cedula}</div>
                ))}
              </div>
              <div class="text-sm text-neutral-600 flex-grow">
                {especialista.certificaciones.length > 0 && (
                  <>
                    <p class="font-semibold mb-2">Certificaciones y diplomados:</p>
                    <ul class="list-disc list-inside space-y-1">
                      {especialista.certificaciones.map((cert) => (
                        <li>{cert}</li>
                      ))}
                    </ul>
                  </>
                )}
              </div>

              <div class="mt-4 pt-4 border-t border-neutral-200 text-center">
                <WhatsAppButton
                  variant="outline"
                  text="Contactar Especialista"
                  message={`Hola, vengo buscando al especialista ${especialista.name} para agendar una cita.`}
                  phone="526623184618"
                  className="text-sm"
                />
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <style>
    .specialist-card {
      transition: opacity 0.3s ease, transform 0.3s ease;
    }
    
    .specialist-card.hidden {
      display: none;
    }
    
    .dropdown-item:hover {
      background-color: #F3F4F6;
    }
  </style>

  <script>
    import '../scripts/especialistas.ts';
  </script>
</Layout>